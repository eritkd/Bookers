<h1>Books</h1>
<table>
    <thead>
        <tr>
        <th>Title</th><th>Body</th>
        <th colspan="3"></th>
        </tr>
    </thead>

<tbody>
    <tr>
<% @books.each do |book| %>
<td><%= book.title %></td>

<td><%= book.body %></td>

<td><%= link_to "Show",book_path(book.id) %></td>
<td><%= link_to "Edit" ,edit_book_path(book.id) %></td>
<td><%= link_to "Destroy",book_path(book.id),method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
</tr>
<% end %>
</tbody>
</table>
<br>
<br>
<h2>New book</h2>
<br>

<%= flash[:notice] %>
<%= form_with model: @book do |f| %>
<span>Title</span><br>
<%= f.text_field:title %><br>
<br>
<span>Body</span><br>
<%= f.text_area:body %><br>
<br>
<%= f.submit ' Create Book ' %>


<% end %>

